class Solution {
    public int longestOnes(int[] nums, int k) {
        int n= nums.length;
        int left=0,right=0,len=0,maxlen=0,zeros=0;
        while(right<n){
            if(nums[right]==0){
                zeros++;
            }
            while(zeros>k){
                if(nums[left]==0) zeros--;
                left++;
            }
            if(zeros<=k){
                len=right-left+1;
                maxlen=Math.max(maxlen,len);
            }
            right++;
        }
        return maxlen;
    }
}
