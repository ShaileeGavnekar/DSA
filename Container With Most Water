class Solution {
    public int maxWater(int arr[]) {
        int n = arr.length;
        int left = 0, right = n - 1;
        int ans = 0;

        while (left < right) {
            int width = right - left;
            int height = Math.min(arr[left], arr[right]);
            ans = Math.max(ans, width * height);
            if (arr[left] < arr[right]) {
                left++;
            } else {
                right--;
            }
        }
        return ans;
    }
}
