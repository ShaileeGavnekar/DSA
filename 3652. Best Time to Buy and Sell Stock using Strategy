class Solution {
    public long maxProfit(int[] prices, int[] strategy, int k) {
        long[] profit= new long[prices.length];
        long actualProfit=0;
        for(int i=0;i<prices.length;i++){
            profit[i] = (long)strategy[i]*prices[i];
            actualProfit +=profit[i];
        }
        long newProfit=0;
        long oldProfit=0;
        long ans=0;
        int i=0,j=0;
        while(j<prices.length){
            oldProfit += profit[j];
            if(j-i+1 >k/2){
                newProfit += prices[j];
            }
            if(j-i+1 >k){
                oldProfit -=profit[i];
                newProfit -= prices[i +k/2];
                i++;
            }
            if(j-i+1 ==k){
                ans= Math.max(ans,newProfit -oldProfit);
            }
            j++;
        }
        return actualProfit +ans;
    }
}
