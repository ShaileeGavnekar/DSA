class Solution {
    public int minSoldiers(int[] arr, int k) {
        int n = arr.length;
        int alreadyDivisible = 0;
        List<Integer> changes = new ArrayList<>();
        for (int strength : arr) {
            int remainder = strength % k;
            if (remainder == 0) {
                alreadyDivisible++;
            } else {
                changes.add(k - remainder);
            }
        }
        Collections.sort(changes);
        int target = (n % 2 == 0) ? n / 2 : (n / 2 + 1);
        int res = 0;
        int idx = 0;
        while (alreadyDivisible < target && idx < changes.size()) {
            res += changes.get(idx++);
            alreadyDivisible++;
        }
        return res;
    }
}
