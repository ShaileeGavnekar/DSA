class Solution {
    public void rearrange(int[] arr, int x) {
        List<int[]> temp = new ArrayList<>();

        for (int i = 0; i < arr.length; i++) {
            temp.add(new int[]{Math.abs(x - arr[i]), arr[i], i});
        }
        Collections.sort(temp, (a, b) -> {
            if (a[0] == b[0]) return a[2] - b[2]; 
            return a[0] - b[0];
        });

        for (int i = 0; i < arr.length; i++) {
            arr[i] = temp.get(i)[1];
        }
    }
}
